<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0B6EC">

    <!-- Header section with Back, Bosch logo, and Settings -->

    <!-- Place model in your environment button -->

    <!-- See model use cases button -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/backbutton" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:srcCompat="@drawable/bo" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:alpha="0"
        android:text="Button" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="655dp"
        android:alpha="0"
        android:text="Button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="588dp"
        android:text="Tools"
        android:textSize="45sp" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="541dp"
        android:checked="true"
        android:contentDescription="Cool Button"
        android:text="Mouse"
        android:textSize="15sp" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="453dp"
        android:checked="true"
        android:contentDescription="Cool Button"
        android:text="Keyboard"
        android:textSize="15sp" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="354dp"
        android:checked="true"
        android:contentDescription="Cool Button"
        android:text="Menu Label"
        android:textSize="15sp" />
